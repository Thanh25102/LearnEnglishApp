<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CardActivity" android:orientation="vertical" android:weightSum="3">


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:gravity="center_horizontal|center_vertical"
            android:layout_marginStart="4dp" android:layout_marginEnd="4dp" android:layout_weight="0.3">
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageButton"
                android:contentDescription="close" android:layout_margin="16dp"
                app:srcCompat="@android:drawable/ic_menu_close_clear_cancel"/>
        <androidx.cardview.widget.CardView android:layout_width="wrap_content" android:layout_height="wrap_content"
                                           app:cardBackgroundColor="#FFEB3B"
                                           app:cardCornerRadius="100dp" android:layout_weight="1"
                                           android:layout_marginRight="16dp">
            <ProgressBar
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/progressBar" android:background="#5B5B5B"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="0dp" android:layout_weight="2">
        <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content"
                                           app:cardCornerRadius="20dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
                                           android:layout_marginEnd="44dp" android:id="@+id/cardFront">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="426dp" android:paddingTop="20dp">
                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                                android:layout_weight="1">
                    <androidx.cardview.widget.CardView android:layout_width="65dp" android:layout_height="wrap_content"

                                                       android:contentDescription="btnSound"
                                                       android:layout_alignParentEnd="true"
                                                       android:layout_marginEnd="131dp"
                                                       android:layout_alignParentStart="true"
                                                       android:layout_marginStart="131dp" android:layout_marginTop="0dp"
                                                       android:layout_alignParentTop="true"
                                                       app:cardCornerRadius="28dp"
                                                       android:translationZ="5dp">
                        <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                                android:id="@+id/imageButton2"
                                android:contentDescription="btnSound"
                        />
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView android:layout_width="255dp" android:layout_height="255dp"
                                                       android:layout_marginTop="20dp"
                                                       android:layout_alignParentTop="true"
                                                       android:layout_alignParentEnd="true"
                                                       android:layout_marginEnd="40dp"
                                                       android:layout_alignParentStart="true"
                                                       android:layout_marginStart="40dp"
                                                       android:layout_marginBottom="20dp"
                                                       android:layout_alignParentBottom="true"
                                                       app:cardCornerRadius="12dp">
                        <ImageView
                                android:layout_width="255dp"
                                android:layout_height="255dp" tools:srcCompat="@mipmap/hinhconcho"
                                android:id="@+id/imageView7" android:scaleType="fitXY"
                        />
                    </androidx.cardview.widget.CardView>

                </RelativeLayout>
                <TextView
                        android:text="This is my dog , and here is temp txt  helllo"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" android:id="@+id/textView2" android:layout_weight="1"
                        android:gravity="center_horizontal|center_vertical" android:fontFamily="monospace"
                        android:padding="20dp" android:textSize="18sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="0dp" android:layout_height="wrap_content"
                                           app:cardCornerRadius="20dp" app:layout_constraintEnd_toEndOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="44dp"
                                           android:layout_marginEnd="44dp" android:id="@+id/cardBack">
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="426dp" android:paddingTop="20dp" android:weightSum="4">
                <androidx.cardview.widget.CardView android:layout_width="match_parent"
                                                   android:layout_height="0dp"
                                                   android:layout_weight="0.5"

                                                   android:contentDescription="btnSound"
                                                   android:layout_alignParentEnd="true"
                                                   android:layout_marginEnd="131dp"
                                                   android:layout_alignParentStart="true"
                                                   android:layout_marginStart="131dp" android:layout_marginTop="0dp"
                                                   android:layout_alignParentTop="true"
                                                   app:cardCornerRadius="40dp"
                                                   android:translationZ="5dp" app:cardBackgroundColor="#5D5D5D">
                    <ImageButton
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            app:srcCompat="@android:drawable/ic_lock_silent_mode_off"
                            android:id="@+id/imageButtonBack"
                            android:contentDescription="btnSound"
                    />
                </androidx.cardview.widget.CardView>
                <TextView
                        android:text="Dog(n)"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" android:id="@+id/textViewBack4" android:layout_weight="1"
                        android:gravity="bottom|center_horizontal" android:fontFamily="monospace"
                        android:textSize="20sp"/>
                <TextView
                        android:text="/dpg/"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" android:id="@+id/textViewBack3" android:layout_weight="0.5"
                        android:gravity="center_horizontal|center_vertical" android:fontFamily="monospace"
                        android:textSize="20sp"/>
                <TextView
                        android:text="Chú chó"
                        android:layout_width="match_parent"
                        android:layout_height="0dp" android:id="@+id/textViewBack" android:layout_weight="0.5"
                        android:gravity="center_horizontal|top|center_vertical" android:fontFamily="monospace"
                        android:textSize="20sp"/>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_weight="0.7" android:weightSum="1"
            android:gravity="center_horizontal|center_vertical">
        <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="0dp"
                                           android:layout_weight="0.4"
                                           app:cardCornerRadius="35dp"
                                           android:layout_gravity="center_horizontal|center_vertical"
                                           android:layout_marginStart="50dp" android:layout_marginEnd="50dp"
                                           app:cardBackgroundColor="#5A5959">
            <Button
                    android:text="Continue"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:id="@+id/btnCountinue"
                    android:gravity="center_horizontal|center_vertical"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</LinearLayout>