<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@color/back_ground"
>

    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       android:id="@+id/cardViewTopic"
                                       app:layout_constraintEnd_toEndOf="parent"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       android:background="@drawable/box_shadow"
                                       app:cardCornerRadius="10dp" app:layout_constraintBottom_toBottomOf="parent"
                                       android:layout_marginStart="20dp" android:layout_marginTop="10dp"
                                       android:layout_marginEnd="20dp" android:layout_marginBottom="10dp"
                                       android:clickable="true"
                                       android:focusable="true"
                                       android:foreground="?attr/selectableItemBackgroundBorderless"
                                       android:elevation="12dp">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" android:padding="2dp"
                android:background="@drawable/gradient_color_topic"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackgroundBorderless"
                android:id="@+id/layoutCardTopic">
            <androidx.cardview.widget.CardView
                    android:layout_width="220dp"
                    android:layout_height="110dp" android:layout_weight="1"

                    app:cardCornerRadius="120dp" android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                    android:layout_marginLeft="5dp">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:srcCompat="@tools:sample/avatars"
                        android:id="@+id/urlImageView"/>

            </androidx.cardview.widget.CardView>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:layout_weight="1"
                    android:layout_gravity="center" android:paddingStart="30dp">
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/titleTextView" android:paddingBottom="5dp"
                        android:textSize="18dp" android:textColor="#FAFAFA"/>
                <TextView
                        android:text="TextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:id="@+id/thumbnailTextView"
                        android:paddingTop="5dp"
                        android:textSize="14sp" android:textColor="#FFFFFF"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>