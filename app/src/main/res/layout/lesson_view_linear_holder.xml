<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:background="@android:color/transparent"
                                                   android:id="@+id/lesson">

    <androidx.cardview.widget.CardView android:layout_width="match_parent" android:layout_height="wrap_content"
                                       app:layout_constraintStart_toStartOf="parent"
                                       app:layout_constraintBottom_toBottomOf="parent"
                                       app:layout_constraintTop_toTopOf="parent"
                                       app:layout_constraintEnd_toEndOf="parent" app:cardCornerRadius="10dp"
                                       android:background="@drawable/bg_rank_share"
                                       app:cardBackgroundColor="@android:color/transparent"
                                       android:layout_marginTop="10dp" android:layout_marginBottom="10dp"
                                       android:layout_marginStart="24dp" android:layout_marginEnd="24dp"
                                       android:id="@+id/warpClass">
        <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                           android:layout_height="wrap_content"
                                                           android:background="@drawable/bg_rank_share"
                                                           android:id="@+id/warpConstraint"
                                                           android:clickable="true"
                                                           android:focusable="true"
                                                           android:foreground="?attr/selectableItemBackgroundBorderless">

            <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp" app:srcCompat="@drawable/checked" android:id="@+id/imageView8"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="6dp" android:layout_marginEnd="8dp"/>
            <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:id="@+id/cardView6" app:layout_constraintTop_toTopOf="parent" app:cardCornerRadius="100dp"
                    android:layout_marginStart="10dp" android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp">
                <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp" app:srcCompat="@drawable/manhthanh" android:id="@+id/represent"/>
            </androidx.cardview.widget.CardView>
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/cardView6"
                    android:layout_marginTop="10dp" android:layout_marginBottom="10dp">

                <TextView
                        android:text="Toeic 500"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" android:id="@+id/lessonName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/description" android:textStyle="bold"
                        android:textSize="20sp"
                        android:layout_marginStart="20dp" app:layout_constraintTop_toBottomOf="@+id/constraintLayout5"
                        android:textColor="@color/black"/>
                <TextView
                        android:text="Dành cho những học viên muốn chuẩn bị cho kì thi toeic"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" android:id="@+id/description"
                        app:layout_constraintTop_toBottomOf="@+id/lessonName"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" android:fontFamily="monospace"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="20dp"
                        android:layout_marginEnd="10dp" android:textColor="@color/black" android:textSize="12sp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                        android:id="@+id/constraintLayout5"
                        android:layout_marginStart="20dp" android:layout_marginEnd="20dp">

                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="36dp" app:srcCompat="@drawable/favourite"
                            android:id="@+id/imageView9" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView10" android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"/>
                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="wrap_content" app:srcCompat="@drawable/favourite"
                            android:id="@+id/imageView10" app:layout_constraintStart_toEndOf="@+id/imageView9"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView11" android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"/>
                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="36dp" app:srcCompat="@drawable/favourite"
                            android:id="@+id/imageView11" app:layout_constraintStart_toEndOf="@+id/imageView10"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView12" android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"/>
                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="36dp" app:srcCompat="@drawable/star"
                            android:id="@+id/imageView12" app:layout_constraintStart_toEndOf="@+id/imageView11"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toStartOf="@+id/imageView13" android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"/>
                    <ImageView
                            android:layout_width="26dp"
                            android:layout_height="36dp" app:srcCompat="@drawable/star"
                            android:id="@+id/imageView13" app:layout_constraintStart_toEndOf="@+id/imageView12"
                            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp"
                            android:layout_marginStart="4dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>