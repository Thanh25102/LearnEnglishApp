<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent" xmlns:app="http://schemas.android.com/apk/res-auto"
             tools:context=".ui.fragment.ChartFragment">


    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="match_parent"
                                                       android:background="@color/back_ground">
        <RelativeLayout android:layout_width="200dp" android:layout_height="60dp"
                        android:layout_centerInParent="true" android:background="@drawable/bg_btn_share"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/barChart"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/rememberVocubulary">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:src="@drawable/bg_btn_share" app:tint="#fff" android:layout_alignParentStart="true"
                       android:layout_marginTop="3dp" android:layout_marginStart="3dp" android:layout_marginEnd="3dp"
                       android:layout_marginBottom="3dp" android:layout_alignParentEnd="true"
                       android:layout_alignParentTop="true"
                       android:clickable="true"
                       android:focusable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless" android:id="@+id/imgLearn">
            </ImageView>
            <RelativeLayout android:layout_width="65dp" android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="6dp"
                            android:background="@drawable/bg_btn_share" android:layout_alignParentEnd="true"
                            android:layout_marginEnd="6dp">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" app:tint="#fff"
                           android:src="@drawable/graduation" android:padding="10dp">
                </ImageView>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginRight="65dp" android:gravity="center" android:text="Ôn tập"
                      android:textColor="#000" android:textStyle="bold" android:textSize="20dp">

            </TextView>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:id="@+id/relativeLayout" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.0" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="20dp" android:elevation="2dp">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="24dp" app:srcCompat="@drawable/baseline_playlist_add_check_black_24"
                    android:id="@+id/imageButton4" android:backgroundTint="@color/back_ground"
                    android:layout_alignParentBottom="true" android:layout_marginBottom="7dp"
                    android:layout_alignParentStart="true" android:layout_marginStart="20dp"
                    android:layout_marginTop="7dp"
                    android:layout_alignParentTop="true"
            />
            <TextView
                    android:text="Bạn đã học được 1000 từ "
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView6"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentTop="true"
                    android:textColor="#000000" android:layout_toEndOf="@+id/imageButton4"
                    android:gravity="center_vertical" android:fontFamily="monospace" android:textSize="15dp"/>
        </RelativeLayout>
        <com.github.mikephil.charting.charts.BarChart android:layout_width="0dp"
                                                      android:layout_height="0dp"
                                                      app:layout_constraintEnd_toEndOf="parent"
                                                      app:layout_constraintStart_toStartOf="parent"
                                                      android:layout_marginEnd="20dp" android:layout_marginStart="20dp"
                                                      android:id="@+id/barChart" android:background="@color/back_ground"
                                                      app:layout_constraintBottom_toBottomOf="parent"
                                                      android:layout_marginBottom="200dp"
                                                      app:layout_constraintHorizontal_bias="1.0"
                                                      app:layout_constraintTop_toTopOf="parent">

        </com.github.mikephil.charting.charts.BarChart>
        <RelativeLayout android:layout_width="200dp" android:layout_height="60dp"
                        android:layout_centerInParent="true" android:background="@drawable/bg_btn_lock_share"
                        app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/barChart"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:id="@+id/timerRemember">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                       android:src="@drawable/bg_btn_lock_share" app:tint="#849BB3"
                       android:layout_alignParentStart="true"
                       android:layout_marginTop="3dp" android:layout_marginStart="3dp" android:layout_marginEnd="3dp"
                       android:layout_marginBottom="3dp" android:layout_alignParentEnd="true"
                       android:layout_alignParentTop="true"
                       android:clickable="true"
                       android:focusable="true"
                       android:foreground="?attr/selectableItemBackgroundBorderless" android:id="@+id/imgTimer">
            </ImageView>
            <RelativeLayout android:layout_width="65dp" android:layout_height="50dp"
                            android:layout_centerVertical="true"
                            android:layout_alignParentRight="true" android:layout_marginRight="6dp"
                            android:background="@drawable/bg_btn_lock_share" android:layout_alignParentEnd="true"
                            android:layout_marginEnd="6dp">
                <ImageView android:layout_width="match_parent" android:layout_height="match_parent" app:tint="#fff"
                           android:src="@drawable/hourglass" android:padding="10dp">
                </ImageView>
            </RelativeLayout>
            <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                      android:layout_marginRight="65dp" android:gravity="center" android:text="22:41:11"
                      android:textColor="#000" android:textStyle="bold" android:textSize="20dp">

            </TextView>
        </RelativeLayout>
        <TextView
                android:text="Bạn có 20 từ để ôn tập "
                android:layout_height="wrap_content" android:id="@+id/textView7"
                app:layout_constraintTop_toBottomOf="@+id/barChart" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:layout_width="0dp" android:textColor="#000000"
                android:textSize="18dp" android:gravity="center|center_horizontal|center_vertical"
                android:layout_marginTop="20dp" android:fontFamily="monospace"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>