<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.AccountActivity" android:background="@color/back_ground">


    <com.google.android.material.navigation.NavigationView
            android:layout_width="0dp"
            android:layout_height="?attr/actionBarSize"
            app:headerLayout="@layout/close_action_bar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            android:id="@+id/navigationView"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_margin="0dp"
            android:backgroundTintMode="add" android:background="@color/nav_bar"
            android:layout_gravity="center|center_horizontal|center_vertical" app:layout_constraintVertical_bias="1.0"
    />
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_height="160dp"
            app:layout_constraintTop_toBottomOf="@+id/navigationView" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" android:layout_width="0dp" android:id="@+id/constraintLayout">
        <androidx.cardview.widget.CardView android:layout_width="110dp" android:layout_height="110dp"
                                           app:layout_constraintTop_toTopOf="parent"
                                           app:layout_constraintStart_toStartOf="parent"
                                           app:layout_constraintBottom_toBottomOf="parent" app:cardCornerRadius="100dp"
                                           android:layout_marginStart="20dp" android:id="@+id/cardView2"
                                           android:elevation="2dp">
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" app:srcCompat="@drawable/manhthanh"
                    android:id="@+id/imageView4"
            />
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView android:layout_width="110dp" android:layout_height="wrap_content"
                                           app:layout_constraintBottom_toBottomOf="parent"
                                           android:layout_marginBottom="22dp"
                                           android:translationZ="2dp"
                                           app:layout_constraintStart_toStartOf="parent"
                                           android:layout_marginStart="20dp"
                                           android:background="#F44343" app:cardCornerRadius="10dp">
            <TextView
                    android:text="Mạnh Thành"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/textView11"
                    android:gravity="center" android:textColor="#000000" android:textStyle="bold"
                    android:textSize="16sp"
                    android:background="#FF0000"/>
        </androidx.cardview.widget.CardView>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="110dp"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toEndOf="@+id/cardView2"
                android:layout_marginStart="20dp">
            <TextView
                    android:text="Bùi Mạnh Thành"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/name"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    android:paddingBottom="10dp" app:layout_constraintBottom_toTopOf="@id/email"
                    android:layout_marginTop="10dp" android:gravity="center|center_vertical"
                    android:textColor="#000000"/>

            <TextView
                    android:text="Email: manhthanh147@gmail.com"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/email"
                    app:layout_constraintTop_toBottomOf="@+id/name"
                    app:layout_constraintStart_toStartOf="parent" android:paddingBottom="10dp"
                    app:layout_constraintBottom_toTopOf="@+id/phone"
                    android:gravity="center|center_vertical" android:textColor="#000000"/>
            <TextView
                    android:text="Phone: 0328735659"
                    android:layout_width="wrap_content"
                    android:layout_height="0dp" android:id="@+id/phone"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/email" android:paddingBottom="10dp"
                    app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="10dp"
                    android:gravity="center|center_vertical" android:textColor="#000000"/>
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true" app:srcCompat="@drawable/baseline_mode_black_20"
                    android:id="@+id/floatingActionButton3"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.589" app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
            android:id="@+id/frameLayout">

        <TextView
                android:text="Nội dung"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textView16" android:paddingStart="20dp"
                android:gravity="center_vertical" android:textSize="20sp" android:textStyle="bold"
                android:textColor="#000000"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout" android:id="@+id/content2">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                app:layout_constraintHorizontal_bias="1.0" app:layout_constraintTop_toBottomOf="@+id/constraintLayout2">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_favorite_black_24"
                    android:id="@+id/imageButton5"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
            <TextView
                    android:text="Từ vựng đã lưu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView17"
                    app:layout_constraintStart_toEndOf="@+id/imageButton5" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
                    android:textColor="#000000"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_keyboard_arrow_right_black_24" android:id="@+id/imageButton6"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:id="@+id/constraintLayout2">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_cloud_download_black_24"
                    android:id="@+id/imageButtonCloud"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
            <TextView
                    android:text="Topic đã tải xuống"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textCLoud"
                    app:layout_constraintStart_toEndOf="@+id/imageButtonCloud" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
                    android:textColor="#000000"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_keyboard_arrow_right_black_24"
                    android:id="@+id/imageButtonCloudArrow"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
            android:layout_width="0dp"
            android:layout_height="40dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.589" app:layout_constraintTop_toBottomOf="@+id/content2"
            android:id="@+id/frameLayout2">

        <TextView
                android:text="Cài đặt khác"
                android:layout_width="match_parent"
                android:layout_height="match_parent" android:id="@+id/textViewNO" android:paddingStart="20dp"
                android:gravity="center_vertical" android:textSize="20sp" android:textStyle="bold"
                android:textColor="#000000"/>
    </FrameLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/frameLayout2" android:id="@+id/content">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout10">
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_dark_mode_black_24"
                    android:id="@+id/imageButtonA"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
            <TextView
                    android:text="Nền tối"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewNo"
                    app:layout_constraintStart_toEndOf="@+id/imageButtonA" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
                    android:textColor="#000000"/>
            <Switch
                    android:text="Tối"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/switch1"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
                    android:textStyle="italic" android:textColor="#000000"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="20dp" android:layout_marginEnd="20dp" android:id="@+id/constraintLayout10">
            <TextView
                    android:text="Tiếng Việt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textDiffL"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="14sp"
                    app:layout_constraintEnd_toStartOf="@+id/imgBtnDiff" android:textStyle="italic"
                    android:textColor="#000000"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" app:srcCompat="@drawable/baseline_language_black_24"
                    android:id="@+id/imageButtonDiff"
                    app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
            <TextView
                    android:text="Ngôn ngữ"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textDiff"
                    app:layout_constraintStart_toEndOf="@+id/imageButtonDiff" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:textSize="16sp"
                    android:textColor="#000000"/>
            <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/baseline_keyboard_arrow_right_black_24"
                    android:id="@+id/imgBtnDiff"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent" android:backgroundTint="@color/back_ground"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout android:layout_width="200dp" android:layout_height="60dp"
                    android:layout_centerInParent="true" android:background="@drawable/bg_btn_lock_share"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/content"
                    android:id="@+id/timerRemember" app:layout_constraintBottom_toBottomOf="parent">
        <ImageView android:layout_width="match_parent" android:layout_height="match_parent"
                   android:src="@drawable/bg_btn_lock_share" app:tint="#849BB3" android:layout_alignParentStart="true"
                   android:layout_marginTop="3dp" android:layout_marginStart="3dp" android:layout_marginEnd="3dp"
                   android:layout_marginBottom="3dp" android:layout_alignParentEnd="true"
                   android:layout_alignParentTop="true"
                   android:clickable="true"
                   android:focusable="true"
                   android:foreground="?attr/selectableItemBackgroundBorderless" android:id="@+id/imgTimer">
        </ImageView>
        <RelativeLayout android:layout_width="65dp" android:layout_height="50dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true" android:layout_marginRight="6dp"
                        android:background="@drawable/bg_btn_lock_share" android:layout_alignParentEnd="true"
                        android:layout_marginEnd="6dp">
            <ImageView android:layout_width="match_parent" android:layout_height="match_parent" app:tint="#fff"
                       android:src="@drawable/bye" android:padding="10dp">
            </ImageView>
        </RelativeLayout>
        <TextView android:layout_width="match_parent" android:layout_height="match_parent"
                  android:layout_marginRight="65dp" android:gravity="center" android:text="Đăng xuất"
                  android:textColor="#000" android:textStyle="bold" android:textSize="20dp">

        </TextView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>